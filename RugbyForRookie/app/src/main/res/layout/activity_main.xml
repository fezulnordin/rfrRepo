<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"

    android:fillViewport="false"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Text atas -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">


            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Learn to be a winner"
                android:id="@+id/textView1"
                android:textSize="40dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_above="@+id/textView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Rugby is a complicated, intense game, which consists of 15 players on each team on a field of 100 meters long and 70 meters wide."
                android:id="@+id/textView"
                android:textAlignment="center"
                android:layout_marginBottom="38dp"
                android:layout_above="@+id/textViewChoose"
                android:layout_alignLeft="@+id/textView1"
                android:layout_alignStart="@+id/textView1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHOOSE THE MENU"
                android:id="@+id/textViewChoose"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imageView2"
                android:background="@drawable/trophy"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp" />

        </RelativeLayout>

        <!-- Menu 1, rules -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="200dp">


            <ImageView
                android:id="@+id/thumbnail1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/aa"
                android:background="#00000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:onClick="switcher"
                android:id="@+id/buttonMenu1"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#87000000" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="The rules"
                android:textSize="30dp"
                android:layout_marginTop="50dp"
                android:textColor="#ffffff"
                android:id="@+id/textView2"
                android:textAlignment="center"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Learn the fundamental and basic rules and regulation of this sport."

                android:layout_marginTop="100dp"
                android:textColor="#ffffff"
                android:id="@+id/textViewS2"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true" />


        </RelativeLayout>

        <!-- Menu 2, tutorial -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="200dp">


            <ImageView
                android:id="@+id/thumbnail2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ab" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:onClick="switcher1"
                android:id="@+id/buttonMenu2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView1"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#87000000" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Tutorial"
                android:textSize="30dp"
                android:layout_marginTop="50dp"

                android:textColor="#ffffff"
                android:id="@+id/textView3"
                android:textAlignment="center"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Video tutorial on how to play this sport."

                android:layout_marginTop="100dp"
                android:textColor="#ffffff"
                android:id="@+id/textViewS3"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true" />



        </RelativeLayout>
        <!-- Menu 3, tips -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="200dp">


            <ImageView
                android:id="@+id/thumbnail3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ac" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:onClick="switcher2"
                android:id="@+id/buttonMenu3"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#87000000" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Tips"
                android:textSize="30dp"
                android:layout_marginTop="50dp"

                android:textColor="#ffffff"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Learn the fundamental and basic rules and regulation of this sport."

                android:layout_marginTop="100dp"
                android:textColor="#ffffff"
                android:id="@+id/textViewS4"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true" />



        </RelativeLayout>

        <!-- menu 4 about kot sini nanti, entah la -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="200dp">


            <ImageView
                android:id="@+id/thumbnail4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/r" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:onClick="switcher3"
                android:id="@+id/buttonMenu4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textAllCaps="false"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#87000000" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="30dp"
                android:layout_marginTop="50dp"

                android:textColor="#ffffff"
                android:id="@+id/textView5"
                android:textAlignment="center"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="The people's behind the scenes of this awesome project."

                android:layout_marginTop="100dp"
                android:textColor="#ffffff"
                android:id="@+id/textViewS5"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="true" />



        </RelativeLayout>
    </LinearLayout>
</ScrollView>
